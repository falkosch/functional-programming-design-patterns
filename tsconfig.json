{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "rootDir": "src",
        "target": "es2015"
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules"
    ]
}